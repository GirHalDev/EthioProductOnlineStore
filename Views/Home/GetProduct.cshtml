@model EthioProductShoppingCenter.DomainLayer.Product

<div class="container">
    <h4>Product Detail</h4>
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="~/Images/@Model.ProductImage" class="card-img img-responsive" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.ProductName</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    <div>
                        @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = @Model.ID }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
