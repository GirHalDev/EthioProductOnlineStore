@model EthioProductShoppingCenter.Models.Home.HomeIndexViewModel
@using PagedList.Mvc;
@using PagedList;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
@*<script src="~/Scripts/bootstrap.min.js"></script>*@
@*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
<div class="container">
    <div class="row">
        <div>
            <div id="imageCarousel" class="carousel slide" data-interval="2000" data-ride="carousel" style="margin-top:15px;">
                <ol class="carousel-indicators">
                    @*Indicators*@
                    <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#imageCarousel" data-slide-to="1"></li>
                    <li data-target="#imageCarousel" data-slide-to="2"></li>
                    <li data-target="#imageCarousel" data-slide-to="3"></li>
                </ol>
                @*The slide show*@
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/img_blue_flowers.jpg" class="img-responsive" style="height:200px; width:100%;" />
                        @*caption*@
                        <div class="carousel-caption">
                            <a href="#" class="btn-primary">Read More</a>
                            <p>Beatuful blue flower</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/img_pink_flowers.jpg" class="img-responsive" style="height:200px; width:100%;" />
                        <div class="carousel-caption">
                            <a href="#" class="btn-primary">Read More</a>
                            <p>Beatuful blue flower</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/img_red_flowers.jpg" class="img-responsive" style="height:200px; width:100%;" />
                        <div class="carousel-caption">
                            <a href="#" class="btn-primary">Read More</a>
                            <p>Beatuful blue flower</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/stars.jpg" class="img-responsive" style="height:200px; width:100%;" />
                        <div class="carousel-caption">
                            <a href="#" class="btn-primary">Read More</a>
                            <p>Beatuful blue flower</p>
                        </div>
                    </div>

                </div>
                @*Left and right controls*@
                <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
    <div>
        <hr />
    </div>
    <div class="row">
        <div class="col-6 col-md-4">

        </div>
        <div class="col-md-8">
            @foreach (var item in Model.ListOfProducts)
            {

                <div class="col-md-6 col-xs-12 pull-right">
                    <div class="thumbnail" style="text-align:center">
                        <div style="height:210px; width:100%">
                            <img class="img-responsive" style="height:inherit; width:inherit" title="Click to view products" src="~/Images/@item.ProductImage" />
                        </div>
                        <div class="caption">
                            <h5>@item.ProductName</h5>
                            <p>$@item.Price</p>
                            @if (item.Quantity > 0)
                            {
                                <p>Available</p>
                            }
                            else
                            {
                                <p>Not Avialabl</p>
                            }
                            @*<a type="button" style="float:right" href="~/ShoppingCart/AddToCart/@item.ID" ><i class="navbar-brand glyphicon glyphicon-shopping-cart"></i></a>*@
                            <div class="product-item-badge">
                                @if (item.IsFeatured == true)
                                {
                                    <p>New</p>
                                }
                                else
                                {
                                    <p>Old</p>
                                }

                            </div>
                            @* Product would be added on the layout page cart icon *@
                            <p>
                                @*@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = item.ID }, new { @class = "btn btn-primary" })*@
                                @Html.ActionLink("Product Detail", "GetProduct", "Home", new { id = item.ID }, new { @class = "btn btn-primary" })
                            </p>

                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

    @*<div class="row">
            <div class="col-sm-6" style="border:dashed; height:260px">

            </div>
            <div class="col-sm-6" style="border:dashed; height:260px">

            </div>
        </div>*@
    @Html.PagedListPager(Model.ListOfProducts, page => Url.Action("Index", new { page }))

</div>

