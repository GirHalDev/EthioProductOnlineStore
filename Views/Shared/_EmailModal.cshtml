@model EthioProductShoppingCenter.Models.Home.EmailReceverViewModel

<div class="container">
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-facebook" data-toggle="modal" data-target="#myModal"><i class="fa fa-envelope-o"></i></button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content" id="divContent">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h5 class="modal-title">Write a New Message</h5>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("EmailReceiverAsync", "Home", FormMethod.Post, new { id = "form" }))
                    {
                        <div class="form-group">
                            <label for="from" class="col-form-label">Sender</label>
                            @*<input type="text" name="from" id="receipient" class="form-control" />*@
                            @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control", id = "from" } })
                        </div>
                        <div class="form-group">
                            <label for="subject" class="col-form-label">Subject</label>
                            @*<input type="text" name="subject" id="receipient" class="form-control" />*@
                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", id = "subject" } })
                        </div>
                        <div class="form-group">
                            <label for="body" class="col-form-label">Message</label>
                            @*<textarea id="message" name="description" class="form-control" spellcheck="true"></textarea>*@
                            @Html.TextAreaFor(model => model.Body, new { @class = "form-control", id = "body" })
                        </div>
                        <button type="submit" class="btn btn-success">Send message</button>
                        <div class="text-center display-none py-5" id="sent">
                            <span class="dots"><i class="fa fa-check"></i></span>
                            <h4 class="mt-2">Message Sent</h4>
                        </div>
                    }

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

</div>

