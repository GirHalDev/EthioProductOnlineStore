    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/mobile.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#btnToggle').click(function () {
                //$('#divNavMobile').width('50%');
                let value = $('#divNavMobile').width();
                //alert(value);
                if (value == 0) {
                    //alert('button clicked' + value);
                    $('#divNavMobile').width('50%');
                    //$('#divNavMobile').height('100%');
                    //$('#navCollapseRight').attr('display', 'none');

                }
                else {
                    //alert('button clicked' + value);
                    $('#divNavMobile').width('0');
                    //$('#divNavMobile').height('50px');

                }

            });

            $('#btnSearchPop').click(function () {

                 
                if($('#formSearch').css('display', 'none')) {
                    $('#formSearch').css('display', 'block');
                    $('#navCollapseLeft').css('display', 'none');
                }
                else {
                    $('#formSearch').css('display', 'none');
                    $('#navCollapseLeft').css('display', 'block');
                }

            });

        });

       
    </script>

</head>
<body>
    <form id="formSearch" class="nav navbar-fixed-top" style="display:none; margin:10px;">
        @*style = "display:block; width:0"*@
        <input name="searchTerm" type="text" placeholder="Enter Keyword" />
        <button style="margin-left:0px" title="Search & Back">&#128269;</button>
    </form>
    <div id="navCollapseLeft" class="nav navbar-fixed-top">

        <ul class="nav">
            <li>@Html.ActionLink("Ethio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
           
            @{Html.RenderAction("CartSummary", "ShoppingCart");}
            <li style="margin-left:200px; display:inline"><button style="margin-top:5px" id="btnSearchPop">&#128269;</button></li>

            <li style="display:inline"><button id="btnToggle" class="btn pull-right fixed-top"> &#9776;</button></li>
        </ul>

    </div>
    <div id="divNavMobile">
