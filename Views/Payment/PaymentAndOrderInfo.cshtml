@model EthioProductShoppingCenter.Models.OrderVM

@{
    ViewBag.Title = "PaymentAndOrderInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PaymentAndOrderInfo</h2>
<br />
@ViewBag.paymentId
<br />

@ViewBag.token
<br />

@ViewBag.payerID
